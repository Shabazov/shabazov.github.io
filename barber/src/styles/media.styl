@media only screen and (min-width 320px)

  .header 
    height 35vh

  .cita
    h1
      font-size 2rem
    

  .barber
    margin 3rem auto 0.3rem
    h2
      font-size 1rem
    p
      font-size 1rem
  
  .gallery
    h1
      font-size 1.4rem

  .container
    display flex
    flex-direction row
    flex-wrap wrap
  .container a
    flex-grow 1

  
  .news__item
    width 80%
    .img__wrapper
      height 200px
    .title
      font-size 1rem

  .footer
    height 15rem
    .quote
      padding-top 8rem

@media only screen and (min-width 480px)

  .news
    padding 0 .2rem
  .news__item
    width 80%
    .img__wrapper
      height 250px

@media only screen and (min-width 768px)

  .header 
    height 50vh

  .cita
    .pedir
      width 15rem
      height 4rem

  .barber
    h2
      font-size 2rem
    p
      font-size 1rem

  .gallery
    h1
      font-size 2.4rem

  .container
    display grid
  .container a
    &:nth-child(1)
      grid-column 1 / 3
    &:nth-child(4)
      grid-column 2 / 4
    &:nth-child(7)
      grid-column 3
      grid-row-start 3
      grid-row-end 5  

  .news__item
    width 30%
    .img__wrapper
      height 150px

  .footer
    height 15rem
    .quote
      padding-top 8rem


@media only screen and (min-width 1025px)
  
  .header 
    height 50vh

  .cita
    h1
      font-size 3rem

  .barber
    margin 3rem auto 0.5rem
    h2
      font-size 2.5rem
    p
      font-size 1.5rem
  .container
    display grid
  .container a
    &:nth-child(1)
      grid-column 1 / 3
    &:nth-child(4)
      grid-column 2 / 4
    &:nth-child(7)
      grid-column 3
      grid-row-start 3
      grid-row-end 5    
  
  .news__item
    width 30%
    .img__wrapper
      height 220px 

  .footer
    height 20rem
    .quote
      padding-top 13rem

@media only screen and (min-width 1600px)

  .news
    padding 0 3rem

  .news__item
    width 30%
    .img__wrapper
      height 350px
    .article
      font-size 1.5rem 
