@require 'var.styl'
@require 'media.styl'

*
  margin 0
  padding 0
  font-family 'Oswald', Arial, sans-serif
  text-decoration none
  box-sizing border-box

input, textarea
  -webkit-appearance none
  -webkit-border-radius 0


.header
  width 100%
  background-image url('../images/barb2.jpg');
  background-size cover
  background-position: 50% 0

.cita
  display flex
  flex-wrap wrap
  position relative
  font-family 'Oswald', Arial, sans-serif
  .cita__wrapper
    width 100%
    h1
      margin 2rem auto
      text-align center
    input
      display block
      margin 3rem auto
      padding 0rem 1rem
      font-family 'Oswald', sans-serif
      font-weight 200
      font-size 2rem
      text-transform uppercase
      border 1px solid #777
      background-color #ca2424
      box-shadow: 0px 3px 15px #777777
      cursor pointer
      outline none

    .modal
      display none
      position fixed
      top 0
      right 0
      bottom 0
      left 0
      margin auto
      width 300px
      height 400px
      background-color rgba(0, 0, 0, 0.7)
      z-index 10
      font-family 'Oswald', sans-serif
      color #ffffff
      h2
        display block
        width 100px
        margin 2rem auto
        color #ca2424
      form
        display grid
        align-items center

        input
          width 80%
          height 2rem
          margin 1rem auto
          padding 1rem
          font-size 1rem
          color #000000
          letter-spacing 5px
          background-color #ffffff
          border none
          box-shadow none
        ::placeholder
          color #000000
        .button
          font-style italic
          font-weight 700
          line-height 5px
          background-color #ca2424

.barbers
  display flex
  align-items: flex-end
  width 100%
  height auto
  margin 7rem auto
  padding 5rem 1rem 0rem
  background-image url('../images/bg-black.jpg')
  background-size: cover
  background-position: 50% 0

  .barber
    width 25%
    height auto 
    // margin 3rem auto 0.7rem
    color #ffffff
    font-family 'Oswald', Arial, sans-serif
    img 
      width 100%
      // height 30rem 
    h2
      display block
      margin 1rem auto
      text-align center
      // font-size 2.5rem
      font-weight 700
      text-shadow 0px 1px 5px #cccccc
    p
      text-align center
      // font-size 1.5rem
      font-weight 300

