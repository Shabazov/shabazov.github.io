.news
  display flex
  flex-wrap wrap
  width 100%
  margin-top 3rem
  font-family 'Oswald', sans-serif
  .news__item
    height auto
    margin 1rem auto
    padding .5rem
    box-shadow 0px 1px 1px #000
    .title
      padding .5rem 1rem
      color #4444e0
      // font-size 2rem
      letter-spacing 1px
      text-transform uppercase
    .img__wrapper
      width 100%
      overflow hidden
      img
        width 100%
        height 100%
      
    .article
      margin .5rem .1rem 
      color #444444
    .more
      display block
      margin .5rem
      text-decoration none
      color #4444e0
      text-transform uppercase
      text-align right


.footer
  display block
  width 100%
  margin-top 5rem
  background-image url('../images/footer.jpg')
  background-size cover
  background-position 50% 0
  .quote
    display block
    width 80%
    margin 0 auto
    // padding-top 8rem
    font-family 'Oswald', sans-serif
    color #ffffff
    text-align center
    .text
      margin-bottom .5rem
      font-style italic
      font-weight 100
      letter-spacing 1px
      word-spacing 2px
    .author
      color #cccccc

