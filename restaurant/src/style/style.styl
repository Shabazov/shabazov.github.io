@require 'var.styl'

*
  margin 0
  padding 0
  text-decoration: none
  box-sizing: border-box

body
  font-family Roboto, Arial

.banner
  width 100%
  position: absolute
  top -20rem
  font-family: 'Lobster'
  z-index: 100
  h1
    color #eeeeee
    font-size 5rem
    text-align: center
  p
    padding 3rem 5rem 
    color #dddddd
    font-size 2rem
    text-align: center



@media screen and (max-width: 576px)
  body
    background-color: bg_color

    .banner
      h1
        font-size 2rem
      p
        font-size 1rem
        padding 0.5rem 1rem
  
    header
      position fixed
      top 0
      width: 100%
      height 4rem
      background-color: rgba(0, 0, 0, 0.5)
      border-bottom: 1px solid #ffffff
      z-index: 100

      .logo
        margin 0.5rem 1rem
        display: inline-block
        color text
        text-decoration: none
        h3
          font-family 'Great Vibes', cursive
          font-size 2.6rem

      nav
        width 100%
        height 3rem

        .menu
          width 100%
          display: none
          position: absolute
          top 4rem
          list-style: none
          z-index: 100
      
      .menu-mobile
        position absolute
        top 0.5rem
        right 0.5rem
        content:"";
        width:  2rem
        height: 0.3rem
        margin 0.5rem
        border-bottom: 15px double #f8f8f8; 
        border-top: 5px solid #f8f8f8; 

      input
        width 3rem
        height 3rem

      .menu__item
        border-bottom 1px solid #ffffff
        background-color: rgba(0, 0, 0, 0.7)

      .menu__link
        padding 1rem
        display: block
        color text
        text-align: center

      .menu__link:hover
        color textHover
        text-shadow: 0px 1px 2px #ffffff
      
      input[type="checkbox"]
        display: none

      input[type="checkbox"]:checked ~ #menu
        display: block
        animation: showUp 0.3s linear
        @keyframes showUp 
          0%
            opacity: 0
          100%
            opacity: 1

   
    .main
      margin: 2rem auto -1rem
      padding-bottom 3rem
      background: -moz-linear-gradient(top, rgba(51,51,51,1) 0%, rgba(250,250,250,1) 100%); /* FF3.6-15 */
      background: -webkit-linear-gradient(top, rgba(51,51,51,1) 0%,rgba(250,250,250,1) 100%); /* Chrome10-25,Safari5.1-6 */
      background: linear-gradient(to bottom, rgba(51,51,51,1) 0%,rgba(250,250,250,1) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
      h2
        text-align: center
        margin-top: 1rem
        color: #dddddd
        font-family 'Amatic SC'
        font-size 3rem

      .dishes
        display: flex
        flex-wrap: wrap
        width 100%

        .dishes__item
          position relative
          width 80%
          height: 15rem
          margin 0.8rem auto
          background-color: #555555
          overflow hidden
          box-shadow: 1px 1px 5px #222
          img
            width 100%
            height 100%
        .dishes__item:hover img
            transform: scale(1.2)
            transition: transform 0.5s ease

          .dimmer
            display flex
            justify-content: center
            align-items: center
            position: absolute
            top 0
            left 0
            width 100%
            height 100%
            background-color: rgba(0, 0, 0, 0.3)

            .dishes__link
              text-align: center
              font-family 'Lobster'
              font-size 3rem
              color #ffffff
            .dishes__text
              color #ffffff
              font-family 'Amatic SC'
              font-size 2rem
    
  .loved
    background-color: #965f1b
    padding 2rem 0 3rem
    h2
      text-align: center
      margin-top: 1rem
      color: #dddddd
      font-family 'Amatic SC'
      font-size 3rem
    .dishes
        display: flex
        flex-wrap: wrap
        width 100%

        .dishes__item
