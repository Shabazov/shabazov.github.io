@media screen and (min-width: 1024px)

    .banner
      h1
        font-size 4rem
      p
        font-size 2rem
        padding 1rem 3rem

    header
      .menu-mobile
        display: none
      #menu
        display: flex
        justify-content: space-between
        width 65%
        position: absolute
        top 0
        right 0
        .menu__item
          background: none 
          border: none
        .menu__link
          font-family: 'Amatic SC'
          font-size 1.5rem
          &:hover
            font-size 1.6rem
            transition: font-size 0.3s ease
    
    .dishes__item
      width: 23% !important
      height 10rem !important
    
    form
      .container
        position relative
        .form__block
          width 50%
      .logo__name
        display: block
        position: absolute
        top 4rem
        right 8rem
        transform: rotate(-10deg)
        h1
          display: block
          width 21rem
          color #ffffff
          font-family: 'Lobster'
          font-size 8rem
          line-height: 5rem
          text-shadow: 1px 2px 2px #000000

// MENU ////////////////////////////////////////////////////////////////////

.title
  width 100%
  height 15rem
  background-image: url(../img/menu.jpg)
  background-size: cover
  background-position: 20% 0
  .title__title
    color rgba(250, 250, 250, 0.9)
    text-align: center
    line-height: 18rem
    font-family: 'Lobster'
    font-size 3.5rem

.menu-card
  width 100%
  padding: 5rem 0rem
  display: flex
  flex-wrap: wrap
  background-color: #ffffff
  border: 1px solid #000000
  .card__item
    display flex
    width 80%
    height 9rem
    margin 0.3rem auto
    background-color: #eeeeee
    border 1px solid #bbbbbb
    overflow hidden
    &:hover img
      transform: scale(1.2)
      transition: transform 0.5s ease
    @media screen and (min-width: 576px)
      width 49%
      height 7rem
      border-right: none
    @media screen and (min-width: 850px)
      width 33.3333%
      height 7rem
      border-right: none
    @media screen and (min-width: 1024px)
      width 25%
      height 7rem
      border-right: none
    .dish__info
      position relative
      width 50%
      padding 0.5rem
      font-family: 'Roboto'
      z-index: 10
      h4
        text-align: center
        padding 0.2rem
        text-shadow 0px 1px 1px #555555
      p
        display: block
        width 90%
        height 2.8rem
        padding 0.5rem 0rem 0rem 1rem
        font-size 0.9rem
        overflow hidden
      span 
        display: block
        padding-top 0.5rem
        text-align: center
        text-shadow: 0px 1px 1px oorange
    .dish__info:after
      content: ''
      display: block
      width 1.5rem
      height 1.5rem
      background-color: #eeeeee
      position: absolute
      top 2.7rem
      right -0.7rem
      transform: rotate(45deg)
    .dish__img
      width 50%
      height 100%
      overflow hidden
      img
        width 100%
        height 100%
        
      
