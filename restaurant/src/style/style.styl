          .dimmer
            display flex
            justify-content: center
            align-items: center
            position: absolute
            top 0
            left 0
            width 100%
            height 100%
            background-color: rgba(0, 0, 0, 0.3)

            .dishes__link
              text-align: center
              font-family 'Lobster'
              font-size 3rem
              color #ffffff
            .dishes__text
              color #ffffff
              font-family 'Amatic SC'
              font-size 2rem

  form
    width 100%
    padding 1rem 0rem
    background-color: #dddddd
    h2
      display: block
      text-align: center
      font-family: 'Lobster'
      font-size 2rem
      color oorange
    label
      padding-left: 1rem
      font-family: 'Lobster'
      font-size 1.3rem
      color oorange
    input[type="text"]
      display: block
      width 80%
      margin 1rem auto
      padding 1rem
      font-family: 'Roboto'
      font-size 1rem
    input:focus
      outline: none
    input[type="submit"]
      display: block
      width 10rem
      height 2rem
      margin 1rem auto 0rem
      background-color: oorange
      border-radius: 3px
      font-family: 'Lobster'
      font-size 1rem
      color #dddddd
  .logo__name
    display: none



