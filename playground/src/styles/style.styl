*
  margin 0
  padding 0
  font-family Arial, sans-serif
  text-transform: uppercase

button
  display block
  width 10rem
  height 3rem
  margin 2rem auto
  background-color: #444444
  outline none
  color #ffffff
  border-radius: 3px
  transition color .5s ease-out
  &:hover
    color #00aaff

.power,
.friend
  display: block
  width 10rem
  height 3rem
  margin 0 auto
  color #ffffff
  background-color #555555
  border-radius 3px
  outline none

.friend
  margin-top 2rem
  background-color #666666